{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true /*Ativa verificações rigorosas*/,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true //Evita o erro devido ao Vitest
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
